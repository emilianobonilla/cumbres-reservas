# Database Configuration
DATABASE_URL=postgresql://cumbres_user:cumbres_password@localhost:5432/cumbres_dev
TEST_DATABASE_URL=postgresql://cumbres_user:cumbres_password@localhost:5432/cumbres_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Application Configuration
APP_NAME=Cumbres Reservas API
APP_VERSION=1.0.0
API_V1_STR=/api/v1
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cumbres-eventos.com
EMAIL_FROM_NAME=Cumbres Eventos

# Azure Configuration (Production)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_APPLICATION_INSIGHTS_KEY=
AZURE_KEY_VAULT_URL=

# Business Logic Configuration
BOOKING_MODIFICATION_HOURS_LIMIT=48
DEFAULT_EVENT_DURATION_HOURS=4
MAX_ADVANCE_BOOKING_DAYS=180

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
